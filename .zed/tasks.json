// Static tasks configuration.
//
// Example:
[
  {
    "label": "debug",
    "command": "cargo run",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "release",
    "command": "cargo run",
    "args": ["--release"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "release + rerun",
    "command": "cargo run",
    "args": ["--release", "--features=rerun"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  }
]
