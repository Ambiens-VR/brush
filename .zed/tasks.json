// Static tasks configuration.
//
// Example:
[
  {
    "label": "debug",
    "command": "cargo run",
    "env": {
      "RUST_BACKTRACE": "1"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "release",
    "command": "cargo run",
    "args": ["--release"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "test rendering",
    "command": "cargo test",
    "args": ["-p brush-render"],
    "env": {
      "RUST_BACKTRACE": "1"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "bench rendering",
    "command": "cargo bench",
    "args": ["-p brush-render"],
    "env": {
      "RUST_BACKTRACE": "1"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  }
]
